<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="409dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/ic_dialogback"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:textSize="25sp"
    android:fontFamily="@font/amaranth_bold"
    android:text="Choose Avatar"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:id="@+id/avat1"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_smile"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
        <ImageButton
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/avat6"
            android:layout_marginStart="5dp"
        android:src="@drawable/ic_sleepy"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:id="@+id/avat4"
            android:src="@drawable/ic_angry"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:id="@+id/avat5"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_cry"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:id="@+id/avat2"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_really"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:id="@+id/avat7"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_savage"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:id="@+id/avat3"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_faces"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:id="@+id/avat8"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_nice"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
    </LinearLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/img"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/change"
        android:fontFamily="@font/amaranth_bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/changebutton"
        android:id="@+id/changeimage"
        android:layout_marginBottom="10dp"
        android:textSize="19sp"
        android:textColor="#fff"/>
</LinearLayout>